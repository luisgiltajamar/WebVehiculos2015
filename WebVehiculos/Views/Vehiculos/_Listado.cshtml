@model  IEnumerable<WebVehiculos.Models.Vehiculo>
@{
    int n = 0;
}

@foreach (var item in Model)
{
    if (n % 3 == 0)
    {
        @Html.Raw("<div class=\"row\">")
    }

    <div class="col-md-4">
        <h2>@item.matricula</h2>
        <h3>@item.marca @item.modelo</h3>
        <p>@item.precio</p>
    </div>

    if (++n % 3 == 0 || n == Model.Count())
    {
        @Html.Raw("</div>")
    }

}